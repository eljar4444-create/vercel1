generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// --- USER & AUTH (Preserved for Authentication) ---

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("CLIENT")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bio           String?

  profile       Profile?
}

// --- NEW MARKETPLACE VERTICALS (Hybrid Schema) ---

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  icon        String?
  form_schema Json      // Defines the structure of "attributes" for this category (e.g. questions)
  profiles    Profile[]
}

model Profile {
  id          Int       @id @default(autoincrement())
  user_email  String    @unique // Link to auth User
  name        String
  city        String
  address     String?
  category_id Int
  attributes  Json      // Flexible JSONB for vertical-specific data
  image_url   String?
  is_verified Boolean   @default(false)
  created_at  DateTime  @default(now())

  category    Category  @relation(fields: [category_id], references: [id])
  user        User?     @relation(fields: [user_email], references: [email])
  services    Service[]

  @@index([category_id])
}

model Service {
  id           Int      @id @default(autoincrement())
  profile_id   Int
  title        String
  price        Decimal  @db.Decimal(10, 2)
  duration_min Int

  profile      Profile  @relation(fields: [profile_id], references: [id])

  @@index([profile_id])
}
