generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  PROVIDER
  ADMIN
}

enum ProviderType {
  SALON
  PRIVATE
  INDIVIDUAL
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  icon        String?
  form_schema Json
  profiles    Profile[]
}

model Profile {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  user_id     String?   @unique
  user_email  String    @unique
  name        String
  provider_type ProviderType @default(PRIVATE)
  city        String
  address     String?
  category_id Int
  attributes  Json
  image_url   String?
  gallery     String[]  @default([])
  studioImages String[] @default([])
  bio         String?  @db.Text
  phone       String?
  latitude    Float?
  longitude   Float?
  schedule    Json?
  is_verified Boolean   @default(false)
  created_at  DateTime  @default(now())
  
  user        User?     @relation(fields: [user_id], references: [id], onDelete: SetNull)
  category    Category  @relation(fields: [category_id], references: [id])
  services    Service[]
  bookings    Booking[]
  conversations Conversation[]
  favorites   Favorite[] @relation("ProviderFavorited")
  reviews     Review[]

  @@index([category_id])
}

model Service {
  id           Int     @id @default(autoincrement())
  profile_id   Int
  title        String
  description  String?
  images       String[] @default([])
  price        Decimal @db.Decimal(10, 2)
  duration_min Int

  profile      Profile @relation(fields: [profile_id], references: [id])
  bookings     Booking[]

  @@index([profile_id])
}

model Booking {
  id          Int      @id @default(autoincrement())
  profile_id  Int
  service_id  Int?
  user_id     String?
  staff_id    String?
  date        DateTime
  time        String
  user_name   String
  user_phone  String
  status      String   @default("pending")
  created_at  DateTime @default(now())

  user        User?    @relation(fields: [user_id], references: [id], onDelete: SetNull)
  profile     Profile  @relation(fields: [profile_id], references: [id])
  service     Service? @relation(fields: [service_id], references: [id])
  staff       Staff?   @relation(fields: [staff_id], references: [id], onDelete: SetNull)

  @@index([profile_id])
  @@index([user_id])
  @@index([staff_id])
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(CLIENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bio           String?

  // --- Onboarding fields ---
  providerType         ProviderType @default(PRIVATE)
  companyName          String?
  isKleinunternehmer   Boolean      @default(false)
  taxId                String?
  address              String?
  city                 String?
  zipCode              String?
  onboardingCompleted  Boolean      @default(false)

  profile       Profile?
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  staff         Staff[]
  conversationsAsClient Conversation[] @relation("ClientConversations")
  favorites     Favorite[] @relation("UserFavorites")
  sentMessages  Message[]
  reviews       Review[]
}

model Staff {
  id        String   @id @default(cuid())
  userId    String
  name      String
  avatarUrl String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@index([userId])
}

model Conversation {
  id              String    @id @default(cuid())
  clientUserId    String
  providerProfileId Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  clientUser      User      @relation("ClientConversations", fields: [clientUserId], references: [id], onDelete: Cascade)
  providerProfile Profile   @relation(fields: [providerProfileId], references: [id], onDelete: Cascade)
  messages        Message[]

  @@unique([clientUserId, providerProfileId])
  @@index([clientUserId])
  @@index([providerProfileId])
  @@index([updatedAt])
}

model Message {
  id              String      @id @default(cuid())
  conversationId  String
  senderUserId    String
  content         String
  isRead          Boolean     @default(false)
  createdAt       DateTime    @default(now())

  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderUser      User         @relation(fields: [senderUserId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderUserId])
}

model Account {
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Favorite {
  id                 String   @id @default(cuid())
  clientId           String
  providerProfileId  Int
  createdAt          DateTime @default(now())

  client   User    @relation("UserFavorites", fields: [clientId], references: [id], onDelete: Cascade)
  provider Profile @relation("ProviderFavorited", fields: [providerProfileId], references: [id], onDelete: Cascade)

  @@unique([clientId, providerProfileId])
  @@index([clientId])
  @@index([providerProfileId])
}

model Review {
  id          String   @id @default(cuid())
  profileId   Int
  clientId    String
  text        String?  @db.Text
  rating      Int      // 1â€“5
  createdAt   DateTime @default(now())

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  client  User    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([clientId])
  @@index([createdAt])
}
